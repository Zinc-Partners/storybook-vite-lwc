<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Procrewz Button</masterLabel>
    <description
  >A customizable button component from the Procrewz Design System</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig
      targets="lightning__AppPage,lightning__RecordPage,lightning__HomePage,lightning__FlowScreen"
    >
            <property
        name="label"
        type="String"
        default="Button"
        label="Label"
        description="Button text"
      />
            <property
        name="variant"
        type="String"
        default="primary"
        label="Variant"
        description="primary, secondary, navy, destructive"
      />
            <property
        name="size"
        type="String"
        default="medium"
        label="Size"
        description="small, medium, large"
      />
            <property
        name="disabled"
        type="Boolean"
        default="false"
        label="Disabled"
      />
            <property
        name="iconUrl"
        type="String"
        label="Icon URL"
        description="Static resource URL for icon"
      />
            <property
        name="iconPosition"
        type="String"
        default="left"
        label="Icon Position"
        description="left, right"
      />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
